package com.pablo.futbol;

public class Main {
    public static void main(String[] args) {
        // Crear equipos
        Equipo equipo1 = new Equipo("Equipo A");
        Equipo equipo2 = new Equipo("Equipo B");
        Equipo equipo3 = new Equipo("Equipo C");

        // Crear una liga
        Liga liga = new Liga();
        liga.agregarEquipo(equipo1);
        liga.agregarEquipo(equipo2);
        liga.agregarEquipo(equipo3);

        // Crear y agregar partidos a la liga
        Partido partido1 = new Partido(equipo1, equipo2, 2, 1);
        Partido partido2 = new Partido(equipo2, equipo3, 0, 3);
        Partido partido3 = new Partido(equipo1, equipo3, 1, 1);

        liga.agregarPartido(partido1);
        liga.agregarPartido(partido2);
        liga.agregarPartido(partido3);

        // Listar resultados
        System.out.println("Partidos jugados:");
        liga.listarPartidos();

        System.out.println("\nEquipos ordenados por partidos ganados:");
        liga.listarEquiposPorPartidosGanados();
    }
}
